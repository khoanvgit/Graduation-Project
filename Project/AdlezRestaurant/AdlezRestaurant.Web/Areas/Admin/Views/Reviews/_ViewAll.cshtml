@model IEnumerable<AdlezRestaurant.Core.Models.Review>

<table class="table" id="userDatatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("CreateOrEdit", "Reviews", null, Context.Request.Scheme)','Reviews')" class="btn btn-success text-light"><i class="fas fa-plus-square"></i> New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a style="color: blue; cursor: pointer; float: left; margin-right: 40px;" onclick="showInPopup('@Url.Action("CreateOrEdit", "Reviews", new{id = @item.Id}, Context.Request.Scheme)','Reviews')"><i class="fas fa-edit"></i></a>
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JqueryAjaxDelete(this)" class="d-inline">
                        <button type="submit" style="border-top-style: hidden;border-bottom-style: hidden;border-left-style: hidden;border-right-style: hidden; outline: none; color: red; background-color: transparent;"><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
